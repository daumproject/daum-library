<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>eu.powet.fota</groupId>
        <artifactId>eu.powet.fota.native.root</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>eu.powet.fota.native</groupId>
    <artifactId>eu.powet.fota.native.osx</artifactId>
    <version>1.1-SNAPSHOT</version>

    <name>native OSX</name>

    <packaging>so</packaging>

    <dependencies>
        <dependency>
            <groupId>eu.powet.fota</groupId>
            <artifactId>eu.powet.fota.api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <!--  trigger javah -->
                    <javahOS>osx</javahOS>

                    <compilerProvider>generic-classic</compilerProvider>

                    <compilerExecutable>cc</compilerExecutable>
                    <linkerExecutable>cc</linkerExecutable>

                    <sources>
                        <source>
                            <directory>../src/main/c</directory>
                            <fileNames>
                                <fileName>fota.c</fileName>
                                <fileName>native.c</fileName>
                            </fileNames>
                        </source>
                    </sources>

                    <linkerEndOptions>
                        <linkerEndOption> -lpthread</linkerEndOption>
                    </linkerEndOptions>
                    <linkerStartOptions>
                        <linkerStartOption>-shared</linkerStartOption>
                    </linkerStartOptions>

                </configuration>


                <executions>
                    <execution>
                        <id>javah</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <javahOS>osx</javahOS>
                            <javahProvider>default</javahProvider>
                            <javahOutputDirectory>${project.build.directory}/custom-javah</javahOutputDirectory>
                            <workingDirectory>${basedir}</workingDirectory>
                            <javahOutputFileName>nativelib.h</javahOutputFileName>
                            <javahClassNames>
                                <javahClassName>eu.powet.fota.Nativelib</javahClassName>
                            </javahClassNames>
                        </configuration>
                        <goals>
                            <goal>javah</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>

        </plugins>
    </build>
</project>
