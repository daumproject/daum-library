<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kevoree.nativeNode</groupId>
        <artifactId>org.kevoree.nativeNode.native</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <groupId>org.kevoree.nativeNode</groupId>
    <artifactId>org.kevoree.nativeNode.native.nix32</artifactId>
    <version>1.1-SNAPSHOT</version>

    <name>native NIX32</name>

    <packaging>so</packaging>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.nativeNode</groupId>
            <artifactId>org.kevoree.nativeNode.api</artifactId>
            <version>1.2</version>
        </dependency>
    </dependencies>

    <build>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <!--  trigger javah -->
                    <javahOS>linux</javahOS>

                    <compilerProvider>generic-classic</compilerProvider>

                    <compilerExecutable>cc</compilerExecutable>
                    <linkerExecutable>cc</linkerExecutable>

                    <sources>
                        <source>
                            <directory>../src/main/c</directory>
                            <fileNames>
                                <fileName>native.c</fileName>
                            </fileNames>
                        </source>
                    </sources>

                    <linkerEndOptions>
                        <linkerEndOption> -lpthread</linkerEndOption>
                    </linkerEndOptions>
                    <linkerStartOptions>
                        <linkerStartOption>-shared -static -lc</linkerStartOption>
                    </linkerStartOptions>

                </configuration>


                <executions>
                    <execution>
                        <id>javah</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <javahOS>linux</javahOS>
                            <javahProvider>default</javahProvider>
                            <javahOutputDirectory>${project.build.directory}/custom-javah</javahOutputDirectory>
                            <workingDirectory>${basedir}</workingDirectory>
                            <javahOutputFileName>nativelib.h</javahOutputFileName>
                            <javahClassNames>
                                <javahClassName>org.kevoree.nativeNode.NativeJNI</javahClassName>
                            </javahClassNames>
                        </configuration>
                        <goals>
                            <goal>javah</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>

            <!--                 -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                                <copy tofile="/home/jed/DAUM_PROJECT/daum-library/pocXenomai/org.kevoree.nativeNode/org.kevoree.nativeNode.api/src/main/resources/nix32/native.so">
                                    <fileset file="${project.build.directory}/org.kevoree.nativeNode.native.nix32.so"/>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>
</project>
