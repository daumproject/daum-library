<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kevoree.nativeN</groupId>
        <artifactId>org.kevoree.nativeN.core</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <groupId>org.kevoree.nativeN.core</groupId>
    <artifactId>org.kevoree.nativeN.core.osx</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>Kevoree :: Tools :: Native OSX </name>

    <packaging>so</packaging>


    <properties>
        <platform>osx</platform>
        <platform.jdk.include.dir>${java.home}/include</platform.jdk.include.dir>
        <platform.javahOS>macosx</platform.javahOS>
        <platform.define>__DARWIN__</platform.define>
        <platform.shlib>dylib</platform.shlib>
        <platform.jni>jnilib</platform.jni>
    </properties>



    <dependencies>
        <dependency>
            <groupId>org.kevoree.nativeN</groupId>
            <artifactId>org.kevoree.nativeN.framework</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <!--  trigger javah -->
                    <javahOS>linux</javahOS>

                    <compilerProvider>generic-classic</compilerProvider>

                    <compilerExecutable>cc</compilerExecutable>
                    <linkerExecutable>cc</linkerExecutable>

                    <sources>

                        <source>
                            <directory>${platform.jdk.include.dir}</directory>
                        </source>
                        <source>
                            <directory>../src/main/c</directory>
                            <fileNames>
                                <fileName>native.c</fileName>
                            </fileNames>
                        </source>
                    </sources>

                    <linkerEndOptions>
                        <linkerEndOption> -lpthread</linkerEndOption>
                    </linkerEndOptions>
                    <linkerStartOptions>
                        <linkerStartOption>-shared -lc</linkerStartOption>
                    </linkerStartOptions>

                </configuration>


                <executions>
                    <execution>
                        <id>javah</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <!-- <javahOS>linux</javahOS>  -->
                            <javahProvider>default</javahProvider>
                            <javahOutputDirectory>${project.build.directory}/custom-javah</javahOutputDirectory>
                            <workingDirectory>${basedir}</workingDirectory>
                            <javahOutputFileName>nativelib.h</javahOutputFileName>
                            <javahClassNames>
                                <javahClassName>org.kevoree.nativeN.core.NativeJNI</javahClassName>
                            </javahClassNames>
                        </configuration>
                        <goals>
                            <goal>javah</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>




        </plugins>
    </build>
</project>
